@page "/AboutUs"
@inject NavigationManager Navigation
<header>
    <nav class="navbar">
        <div class="navbar-left">
            <img src="/images/CompanyLogo-removebg-preview.png" alt="Logo" class="logo" />
        </div>
        <div class="navbar-right">

            <a @onclick="NavigateToHome">Home</a>
            <a @onclick="NavigateToPlansBefore">Plans</a>
            <a @onclick="NavigateToLogin">Login/Register</a>

            <a @onclick="NavigateToContact">Contact Us</a>
            <a @onclick="NavigateToAbout">About Us</a>
        </div>
    </nav>
</header>
<div class="contact-container">
    <div class="contact-header">
        <div class="contact-info">
            <div class="info-item">
                <img src="location-icon.png" alt="Location">
                <p>Head Office</p>
                <p>123 Broadway St, New York, NY 10001</p>
            </div>
            <div class="info-item">
                <img src="phone-icon.png" alt="Phone">
                <p>Phone Number</p>
                <p>(234) 567-8901</p>
            </div>
            <div class="info-item">
                <img src="fax-icon.png" alt="Fax">
                <p>Fax</p>
                <p>1-234-567-8901</p>
            </div>
            <div class="info-item">
                <img src="email-icon.jfif" alt="Email">
                <p>Email</p>
                <p>info@domain.com</p>
            </div>
            <div class="contact-form">
                <h2>About Us</h2>
                <p>
                    As a privately held, family-owned company, Fidelity’s culture is based on loyalty. We prioritize loyalty to our clients, their employees, and the advisors who serve them—but never to shareholders.
                </p>
                <p>
                    We measure relationships in decades—whether that means a relationship with you, your advisor, or our own associates. We earn loyalty in these relationships through continuous re-investment in our platforms, our technology, and the teams we bring in to support you. Across the board, loyalty is cultivated and rewarded at Fidelity.
                </p>
            </div>
        </div>
    </div>

</div>
@code{
    private void NavigateToHome() => Navigation.NavigateTo("/");
    private void NavigateToPlansBefore() => Navigation.NavigateTo("/PlansBefore");
    private void NavigateToContact() => Navigation.NavigateTo("/ContactUs");
    private void NavigateToAbout() => Navigation.NavigateTo("/AboutUs");
    private void NavigateToLogin() => Navigation.NavigateTo("/Login");
}

